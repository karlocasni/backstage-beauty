generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Post {
  id            Int      @id @default(autoincrement())
  title         String
  shortDesc     String
  content       String
  instagramUrl  String?
  youtubeUrl    String?
  featuredImage String?
  galleryImages String? // Stored as JSON string
  duration      String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Admin {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

